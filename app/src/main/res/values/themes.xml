<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NihongoCards" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.NihongoCards" parent="Base.Theme.NihongoCards" />

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="MaterialDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/MaterialDialogCorner</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialDialogTitleColor</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialDialogBodyColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialDialogButtonNegative</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialDialogButtonPositive</item>
        <item name="tint">?attr/colorOnSurface</item>
    </style>

    <style name="MaterialDialogCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MaterialDialogTitleColor" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialDialogBodyColor" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialDialogButtonNegative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MaterialDialogButtonPositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>